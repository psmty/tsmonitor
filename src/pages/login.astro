---
import { SignIn } from 'auth-astro/components';

---

<div
	class="w-full flex flex-col items-center justify-center px-6 pt-8 mx-auto pt:mt-0 dark:bg-gray-900"
>
	<!-- Card -->
	<div
		class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800"
	>
		<h2 class="text-2xl font-bold text-gray-900 dark:text-white">
			Sign in to Tempus
		</h2>
		<form class="mt-8 space-y-6" action="#">
			<div>
        <SignIn class="w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" provider="microsoft-entra-id" options={{ scope: "user:email", callbackUrl: "http://monitor.rv-grid.com/api/auth/callback/microsoft-entra-id" }}>Sign in with Microsoft</SignIn>
			</div>
		</form>
	</div>
</div>
